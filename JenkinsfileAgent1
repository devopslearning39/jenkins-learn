pipeline {
    agent {
        node {
            label 'AGENT-1'
        }
    }

    options {
        ansiColor('xterm')
    }
    parameters {
        choice(name: 'Env', choices: ['Dev', 'Prod'], description: 'Please select which env you wanted to deploy ?')
    }
    stages {
        stage('Dev env build deploy') {
            when {
                expression { params.Env == 'Dev' }
            }
            steps {
                echo 'You have selected Dev env, So we are deploying in dev env.'
            }
        }

        stage('Prod env build deploy') {
            when {
                expression { params.Env == 'Prod' }
            }
            steps {
                echo 'You have seleced Prod env, so we cannot deploy in the prod env.'
            }
        }
    }
}