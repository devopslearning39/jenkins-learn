pipeline {
    agent {
        node {
            label 'AGENT-1'
        }
    }

    // environment {
    //     PERSON="praveen"

    // }
    // options {
        // timeout(time: 20, unit: 'SECONDS');
        // disableConcurrentBuilds()
    // }
    // stage('Fetching env vars') {
        //     steps {
        //         echo "candidate is $PERSON"
        //     }
        // }


    parameters {
        string(name: 'PERSON', defaultValue: 'Hey Praveen', description: 'Who should I say hello to')
        text(name: 'BIOGRAPHY', defaultValue: 'How are you, Whats app!', description: 'Enter some information about the person')
        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
        choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')
        password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }


    stages {
        stage('Build') {
            steps {
                echo "Hello ${params.PERSON}"

                echo "Biography: ${params.BIOGRAPHY}"

                echo "Toggle: ${params.TOGGLE}"

                echo "Choice: ${params.CHOICE}"
                
                echo "Password: ${params.PASSWORD}"
            }
        }        
    }
}